{
  "name": "@portabletext/react-native",
  "version": "2.6.0",
  "description": "*Experimental*: Render Portable Text with React Native",
  "keywords": [
    "portable-text"
  ],
  "homepage": "https://github.com/portabletext/react-native-portabletext#readme",
  "bugs": {
    "url": "https://github.com/portabletext/react-native-portabletext/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/portabletext/react-native-portabletext.git"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/typescript/index.d.ts",
      "default": "./dist/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/module/index.js",
  "types": "./dist/typescript/index.d.ts",
  "files": [
    "src",
    "dist",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "build": "bob build",
    "format": "prettier --write --cache --ignore-unknown .",
    "lint": "eslint .",
    "prepare": "pnpm build",
    "release": "changeset publish",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "prettier": "@sanity/prettier-config",
  "eslintConfig": {
    "parserOptions": {
      "ecmaFeatures": {
        "modules": true
      },
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "extends": [
      "sanity",
      "sanity/react",
      "sanity/typescript",
      "prettier"
    ],
    "rules": {
      "react/prop-types": "off"
    },
    "ignorePatterns": [
      "lib/**/"
    ]
  },
  "dependencies": {
    "@portabletext/react": "^4.0.1",
    "@portabletext/types": "^2.0.15"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-flow": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@react-native/babel-preset": "^0.81.0",
    "@react-native/typescript-config": "^0.81.0",
    "@sanity/prettier-config": "^2.0.1",
    "@testing-library/react-native": "^13.3.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.10",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "babel-jest": "^30.0.5",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-sanity": "^7.1.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-native": "^0.81.0",
    "react-native-builder-bob": "^0.40.13",
    "react-test-renderer": "^19.1.1",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "react": "^18.2 || ^19",
    "react-native": "^0.74 || ^0.75 || ^0.76 || ^0.77 || ^0.78 || ^0.79 || ^0.80 || ^0.81"
  },
  "packageManager": "pnpm@10.15.0",
  "publishConfig": {
    "access": "public"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      "typescript"
    ]
  }
}
