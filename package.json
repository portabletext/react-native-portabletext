{
  "name": "@portabletext/react-native",
  "version": "1.0.0",
  "description": "*Experimental*: Render Portable Text with React Native",
  "keywords": [
    "portable-text"
  ],
  "homepage": "https://github.com/portabletext/react-native-portabletext#readme",
  "bugs": {
    "url": "https://github.com/portabletext/react-native-portabletext/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/portabletext/react-native-portabletext.git"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "type": "module",
  "main": "./dist/react-native-portable-text.esm.js",
  "module": "./dist/react-native-portable-text.esm.js",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "vite build -c ./vite.config.cjs",
    "format": "prettier --write --cache --ignore-unknown .",
    "lint": "eslint .",
    "prepublishOnly": "pnpm build",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "prettier": {
    "bracketSpacing": false,
    "plugins": [
      "prettier-plugin-packagejson"
    ],
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaFeatures": {
        "modules": true
      },
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "extends": [
      "sanity",
      "sanity/react",
      "sanity/typescript",
      "prettier"
    ],
    "ignorePatterns": [
      "lib/**/"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "extends": "@sanity/semantic-release-preset"
  },
  "jest": {
    "preset": "react-native",
    "snapshotFormat": {
      "printBasicPrototype": false
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(@react-native|react-native)).*/"
    ]
  },
  "dependencies": {
    "@portabletext/react": "^1.0.0",
    "@portabletext/types": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-typescript": "^7.16.7",
    "@sanity/semantic-release-preset": "^4.1.3",
    "@types/jest": "^29.0.0",
    "@types/react": "^18.0.0",
    "@types/react-native": "^0.71.0",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "babel-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-sanity": "^6.0.0",
    "eslint-plugin-react": "^7.27.1",
    "jest": "^29.0.0",
    "prettier": "^2.5.1",
    "prettier-plugin-packagejson": "^2.4.2",
    "react": "^18.0.0",
    "react-native": "^0.71.0",
    "react-test-renderer": "^18.0.0",
    "semantic-release": "^21.0.9",
    "typescript": "^5.0.0",
    "vite": "^2.7.4",
    "vite-dts": "^1.0.4"
  },
  "peerDependencies": {
    "react": "^17 || ^18",
    "react-native": "^0.66 || ^0.67 || ^0.68 || ^0.69 || ^0.70 || ^0.71"
  },
  "packageManager": "pnpm@8.6.12",
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
